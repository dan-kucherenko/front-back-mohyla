<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <!-- Css styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="../styles/show-users.css">
    <title>Spammer helper</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
            crossorigin="anonymous"></script>
</head>
<body>

<div class="container">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link " aria-current="page" href="http://localhost:4567/spammer">Add user</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="http://localhost:4567/spammer/show-users">Show users</a>
        </li>
    </ul>
    <h1><span>Spammer Helper</span></h1>
    <ol class="list-group list-group-numbered">
        <% users.forEach(function (user) { %>
        <li class="list-group-item"><%= user.email %>
            <div class="btn-group">
                <button class="btn" type="submit"> Edit</button>
                <button class="btn" type="button" name="delete_button" id="<%= user.email %>"
                        onclick=deleteUser(this.id)>
                    Delete
                </button>
            </div>
            <% }); %>
        </li>
    </ol>
    <script>
        function deleteUser(emailInput) {
            let object = {
                email: emailInput
            }
            fetch('http://localhost:4567/spammer/delete-user', {
                method: 'DELETE',
                body: JSON.stringify(object),
                headers: {'Content-type': 'application/json'}
            }).then(() => {
                alert("Email has been deleted");
            }).then(() =>
                window.location.reload());
        }
    </script>
    <script>
        function getSelectedMessage() {
            const message_selector = document.getElementById('message-selector');
            const selected_message = message_selector.options[message_selector.selectedIndex].text;
            window.alert(selected_message);
            if (selected_message.message == "Write my own")
                document.append(<textarea class="form-control" rows='3'/>);
        }
    </script>
    <select class="form-select" id="message-selector" onchange="getSelectedMessage()" name="messages">
        <% messages.forEach(function (message) { %>
            <option value="<%= message._id %>"> <%= message.message %> </option>
        <% }) %>
        <option selected value="Write my own">Write your own</option>
    </select>
    <button class="btn btn-primary" onclick="location.href='http://localhost:4567/spammer/send-email'">Send email
    </button>
</div>
</body>
</html>